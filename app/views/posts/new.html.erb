<div class=" buffer"></div>
<h1 class="align-center">New post</h1>

<%= bootstrap_form_for :post, :html => { :method=> "POST",:class=> "container" }, url: '/posts/' + @post.id.to_s do |f| %>

            <div class="field">
    
    <%= f.text_field :title,placeholder: 'Title', hide_label: true %>
  </div>
  <div class="field">
    
    <%= f.text_area :content,placeholder: 'Content', hide_label: true, cols: "80", rows: "25" %>
  </div>
  <div class="field">
    
       <%= f.collection_select :category_id, @categories, :id, :name, prompt: "Select Category" %>

  </div>
            <%= f.submit "Submit",  class: 'btn btn-warning check' %>

          <% end %>
